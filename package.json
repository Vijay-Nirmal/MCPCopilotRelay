{
  "name": "mcp-copilot-relay",
  "version": "1.0.0",
  "description": "Generate VS Code extensions from MCP servers by mapping tools, prompts, and resources to VS Code capabilities",
  "author": "Vijay Nirmal",
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp-copilot-relay": "./dist/cli/index.js"
  },
  "main": "./dist/cli/index.js",
  "scripts": {
    "dev": "concurrently --raw \"npm run dev:proxy\" \"npm run dev:ui\"",
    "dev:proxy": "tsx watch src/proxy/dev.ts",
    "dev:ui": "vite",
    "build": "npm run build:proxy && npm run build:ui",
    "build:proxy": "tsc && esbuild src/proxy/server.ts --bundle --platform=node --outfile=dist/proxy/server.js --external:@modelcontextprotocol/sdk --external:express --external:cors --format=esm",
    "build:ui": "vite build",
    "build:cli": "tsc && esbuild src/cli/index.ts --bundle --platform=node --outfile=dist/cli/index.js --format=esm --banner:js=\"#!/usr/bin/env node\"",
    "build:all": "npm run build:cli && npm run build:proxy && npm run build:ui",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@types/prismjs": "^1.26.5",
    "@vscode/vsce": "^3.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "esbuild": "^0.24.2",
    "express": "^4.21.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.469.0",
    "monaco-editor": "^0.53.0",
    "open": "^10.1.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "vscode",
    "extension",
    "generator",
    "copilot",
    "npx"
  ]
}
